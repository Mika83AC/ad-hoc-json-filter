{
   "compilerOptions": {
      "module": "commonjs",
      "lib": [
         "ES2015",
         "DOM"
      ],
      "preserveConstEnums": true,
      "declaration": true,
      "allowUnreachableCode": false,
      "alwaysStrict": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noUncheckedIndexedAccess": true,
      "strictNullChecks": true
   }
}