{
   "compilerOptions": {
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "lib": [
         "ES2015",
         "DOM"
      ],
      "preserveConstEnums": true,
      "declaration": true,
      "allowUnreachableCode": false,
      "alwaysStrict": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noUncheckedIndexedAccess": true,
      "strictNullChecks": true
   },
   "include": [
      "index.ts"
   ],
   "exclude": [
      "tests/**/*",
      "node_modules",
      "dist"
   ]
}